# ===========================================
# Nexus33 Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3000

# Production URL (set when deploying to nexus33.io)
# API_BASE_URL=https://api.nexus33.io
# FRONTEND_URL=https://nexus33.io

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# Database
# ===========================================
MONGODB_URI=mongodb://localhost:27017/nexus33

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# Ollama Configuration
# ===========================================
OLLAMA_BASE_URL=http://localhost:11434

# ===========================================
# Google OAuth
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ===========================================
# Stripe (Payments)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_STARTER=price_xxx
STRIPE_PRICE_ID_PRO=price_xxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxx

# ===========================================
# PayPal (Payments)
# ===========================================
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ===========================================
# AI Model Providers
# ===========================================
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
PERPLEXITY_API_KEY=your-perplexity-key

# ===========================================
# AnythingLLM Integration
# ===========================================
ANYTHING_LLM_URL=http://localhost:3001
ANYTHING_LLM_KEY=your-anythingllm-key

# ===========================================
# Kraken (Crypto Finance)
# ===========================================
KRAKEN_API_KEY=your-kraken-key
KRAKEN_API_SECRET=your-kraken-secret

# ===========================================
# Security Services
# ===========================================
AIKIDO_CLIENT_ID=your-aikido-client-id
AIKIDO_CLIENT_SECRET=your-aikido-client-secret
SHODAN_API_KEY=your-shodan-key

# ===========================================
# Dart AI (Project Management)
# ===========================================
DART_API_KEY=your-dart-api-key

# ===========================================
# Email (SMTP for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# Obsidian Integration
# ===========================================
OBSIDIAN_VAULT_PATH=C:/path/to/your/obsidian/vault

# ===========================================
# MCP (Model Context Protocol)
# ===========================================
PIECES_MCP_URL=http://localhost:39300/model_context_protocol/2024-11-05/sse

# ===========================================
# VPN/TOR (Anonymization)
# ===========================================
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
PROTONVPN_USER=your-protonvpn-user
PROTONVPN_PASS=your-protonvpn-pass

# ===========================================
# Groq (Ultra-Fast Cloud Inference)
# ===========================================
GROQ_API_KEY=your-groq-api-key

# ===========================================
# Gemini (Google AI - Teacher Model)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# RunPod (GPU Cloud for Heavy Inference)
# ===========================================
# Get your API key from https://www.runpod.io/console/settings
RUNPOD_API_KEY=your-runpod-api-key

# Serverless Endpoint IDs (create these in RunPod console)
RUNPOD_LLAMA70B_ENDPOINT=your-llama70b-endpoint-id
RUNPOD_MISTRAL_ENDPOINT=your-mistral-endpoint-id
RUNPOD_QWEN_ENDPOINT=your-qwen-endpoint-id
RUNPOD_VLLM_ENDPOINT=your-vllm-endpoint-id

# For custom GPU pods with OpenAI-compatible API
RUNPOD_OPENAI_ENDPOINT=https://your-pod-id.proxy.runpod.net
