# Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8080
HOST=0.0.0.0
NODE_ENV=production

# ============================================
# AI PROVIDER (choose one)
# ============================================
# Options: 'anythingllm', 'ollama', 'openrouter'
AI_PROVIDER=anythingllm

# ---- AnythingLLM (Recommended for Cloud + Local) ----
ANYTHING_LLM_URL=http://localhost:3001/api/v1
ANYTHING_LLM_KEY=your_anythingllm_api_key_here
VPO_WORKSPACE=expert-senior-en-excellence-operationnelle-standard-vpowcm-et-specialiste-technique-des-machines-keelclip

# ---- Ollama (100% Local, 100% Private) ----
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision:11b
OLLAMA_EMBEDDING=nomic-embed-text

# ---- Open Router (Cloud, Best Quality) ----
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=qwen/qwen-2.5-vl-72b-instruct

# ============================================
# VPO STANDARDS
# ============================================
VPO_LANGUAGE=fr  # 'en', 'fr', 'es', 'pt'
VPO_STRICT=true  # Enforce strict VPO compliance

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info  # 'error', 'warn', 'info', 'debug'
LOG_FILE=./logs/keelclip-vpo.log
LOG_CONSOLE=true

# ============================================
# STORAGE
# ============================================
STORAGE_TYPE=local  # 'local', 's3', 'azure'
STORAGE_PATH=./reports

# ============================================
# LICENSE (REQUIRED FOR PRODUCTION)
# ============================================
LICENSE_KEY=TRIAL-XXXX-XXXX-XXXX-XXXX
LICENSE_TYPE=trial  # 'trial', 'perpetual', 'subscription', 'enterprise'
LICENSE_EXPIRY=2025-12-31
MAX_REPORTS=10  # -1 for unlimited (paid licenses)

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_VISION=true
FEATURE_MULTILANG=false
FEATURE_FABRIC=true
FEATURE_API=true
FEATURE_CLOUD_BACKUP=false

# ============================================
# OPTIONAL: SAP/DMS INTEGRATION (Enterprise only)
# ============================================
# SAP_URL=https://your-sap-instance.com
# SAP_USERNAME=your_username
# SAP_PASSWORD=your_password
# DMS_ENDPOINT=https://your-dms.com/api
